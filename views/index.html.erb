    });    
</script>

<script>
    function validateSearch() {
        let searchQuery = document.forms["searchForm"]["query"].value;
        let searchErrorMessage = document.getElementById("searchQueryError");
        if (searchQuery == "") {
            searchErrorMessage.style.display = "block";
            document.forms["searchForm"]["query"].className = "govuk-input govuk-input--error";
            return false;
        }
    }
</script>
