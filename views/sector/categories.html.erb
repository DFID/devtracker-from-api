---
title: Development Tracker
---

<div id="page-title" class="row">
    <div class="twelve columns">
        <img src="/images/ukaid_logo.png" alt="UK aid from the British people">
        <div>
            <div class="breadcrumb">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/sector">Aid by Sector</a></li>
                    <li><%= sector['sectorName'] %></li>
                </ul>
            </div>
            <h1>
                Aid by Sector
            </h1>
        </div>
    </div>
</div>


<div class="row">
    <div class="twelve columns content">
        <h2 class="section-group-title"><%= sector['sectorName'] %> Sector Breakdown</h2>
        <div class="row">
            <div class="four columns summary">
                <p><%= sector['sectorName'] %></p>
                <a class="button" href="/sector/<%=sector['_id']%>/projects" style="width:100%;">View All <%= sector['sectorName'] %> Projects</a>
            </div>
            <div class="eight columns">
                <ul class="sector-list">
                    <% (sector_categories_structure(sector['_id']) || []).each do |category| %>
                        <li>
                            <a href="/sector/<%=sector['_id']%>/categories/<%=category[:code]%>"><%=category[:name]%></a>
                            <div class="progress">
                                <em><%=format_percentage category[:percentage]%></em>
                                <span class="meter" style="width: <%=format_percentage category[:cellWidth]%>"></span>
                                <span>Â£<%=format_round_m category[:budget] || 0.0 %></span>                                
                            </div>
                        </li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
</div>