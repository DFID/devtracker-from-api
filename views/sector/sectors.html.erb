---
title: Development Tracker
---

<div id="page-title" class="row">
    <div class="twelve columns">
        <img src="/images/ukaid_logo.png" alt="UK aid from the British people">
        <div>
            <div class="breadcrumb">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/sector">Aid by Sector</a></li>
                    <li><a href="/sector/<%= sector['sectorCode'] %>"><%= sector['sectorName'] %></a></li>
                    <li><%= sector['categoryName'] %></li>
                </ul>
            </div>
            <h1>
                Aid by Sector
            </h1>
        </div>
    </div>
</div>

<div class="row">
    <div class="twelve columns content">
        <h2 class="section-group-title"><%= sector['categoryName'] %> Sector Breakdown</h2>
        <div class="row">
            <div class="four columns summary">
                <p><%= sector['categoryName'] %></p>
                <a class="button" href="/sector/<%=sector['sectorCode']%>/categories/<%=sector['_id']%>/projects" style="width:100%;">View All <%= sector['categoryName'] %> Projects</a>
            </div>
            <div class="eight columns">
                <ul class="sector-list">
                    <% (sectors_structure(sector['_id']) || []).each do |s| %>
                        <li>
                            <a href="/sector/<%=sector['sectorCode']%>/categories/<%=sector['_id']%>/projects/<%=s[:code]%>"><%=s[:name]%></a>
                            <div class="progress">
                                <em><%=format_percentage s[:percentage]%></em>
                                <span class="meter" style="width: <%=format_percentage s[:cellWidth]%>"></span>
                                <span>Â£<%=format_round_m s[:budget] || 0.0 %></span>                                
                            </div>
                        </li>
                    <% end %>
                </ul>
            </div>
        </div>

    </div>
</div>