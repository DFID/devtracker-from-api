<div class="hero">
    <div id="page-title" class="row">
        <div class="twelve columns">
            <img src="/images/cw_ukaid_logo.png" alt="UK aid from the British people">
            <div>
                <div class="govuk-breadcrumbs">
                    <ol class="govuk-breadcrumbs__list">
                        <li class="govuk-breadcrumbs__list-item"><a class="govuk-breadcrumbs__link" href="/">Home</a></li>
                        <li class="govuk-breadcrumbs__list-item"><a class="govuk-breadcrumbs__link" href="/location/country">Aid by Location</a></li>
                        <li class="govuk-breadcrumbs__list-item" aria-current="page"><%= country[:name] %></li>
                    </ol>
                </div>
                <h1>
                    <%= country[:name] %>
                </h1>
            </div>
        </div>
    </div>
    <%= erb :'partials/_countries-tabs', :locals => { :active => "results", :country => country, :project_count => totalProjects['count'], :results_count => results.length } %>
</div>
<div class="row">
    <div class="twelve columns content results-info">
        <h3 class="section-group-title">Results reported between 2011/12 - 2015/16</h3>
            <% resultsPillar[country[:code]][0].each do |pillar| %>
                <div class="row">
                    <div class="four columns summary">
                    <h3><%= pillar[0] %></h3>
                    </div>
                    <div class="eight columns">
                        <ul>
                            <% pillar[1].each do |pillarData| %>
                                <li><%= pillarData[0] %><span><%= pillarData[1] %></span></li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            <% end %>
    </div>   
</div>
<div class="row">
    <div class="twelve columns download-link">
        <p>Source: <a href="https://www.gov.uk/government/publications/dfid-annual-report-and-accounts-2015-16" target="_blank">DFID Annual Report and Accounts 2015-2016</a></p>
        <p><a href="https://www.gov.uk/government/publications/dfid-annual-report-and-accounts-2014-15-results" target="_blank">Technical Note on Results</a></p>
    </div>
</div>


