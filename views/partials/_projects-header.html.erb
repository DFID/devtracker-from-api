<div id="page-title" class="row">
    <div class="twelve columns">
        <img src="/images/ukaid_logo.png" alt="UK aid from the British people">
        <div>
            <div class="breadcrumb">
                <ul>
                    <li><a href="/">Home</a></li>
                    <%#if countryOrRegion[:projectType] == "country" %>
                        <li><a href="<%= countryOrRegion[:breadcrumbUrl] %>/"><%= countryOrRegion[:breadcrumbLabel] || "" %></a></li>
                    <%# end %>
                    <li title="<%= project['title']['narratives'][0]['text'] %>"><%= project['title']['narratives'][0]['text'] %></li>
                </ul>
            </div>
            <h1>
                <%= project['title']['narratives'][0]['text'] %> <small>[<%= project['iati_identifier'] %>]</small>
            </h1>
            <h2>
                <%= reporting_organisation(project) %>
             </h2>
        </div>
    </div>
</div>

<div class="row">
    <div class="twelve columns">
        <div class="tab-bar-container">
            <div class="row">
                <div class="button-row">
                    <span>
                        <% projectTitle = project['title']['narratives'][0]['text'] + " [" + project['iati_identifier'] + "]"%>
                        <a href="/fraud?project=<%= format_query_string(projectTitle) %>" class="button serious" title="Report fraud">Report Fraud</a>
                    </span>
                </div>
                <div class="projects-nav">
                    <nav>
                        <ul class="tab-bar">
                            <li <%= active=="summary" ? "class='active'" : ""%>><a href="/projects/<%=project['iati_identifier']%>">Summary</a></li>
                            <li <%= active=="documents" ? "class='active'" : ""%>><a href="/projects/<%=project['iati_identifier']%>/documents">Documents (<%= project['document_links'].count %>)</a></li>
                            <li <%= active=="transactions" ? "class='active'" : ""%>><a href="/projects/<%=project['iati_identifier']%>/transactions">Transactions</a></li>
                            <% if fundedProjectsCount > 0 || fundingProjectsCount > 0 then %>
                                <li <%= active=="partners" ? "class='active'" : ""%>><a href="/projects/<%=project['iati_identifier']%>/partners">Partners</a></li>
                            <% end %>

                            <!-- TODO: bring back in r4dDocs element -->
                        </ul>
                    </nav>
                </div>          
            </div>
        </div>
    </div>
</div>