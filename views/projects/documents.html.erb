<%= erb :'partials/_projects-header', :locals => { :project => project, :countryOrRegion => countryOrRegion, :fundedProjectsCount => fundedProjectsCount, :fundingProjectsCount => fundingProjectsCount, :active => "documents"} %>

<div class="row">
    <div class="twelve columns summary">
      <h2>Documents</h2>
      <div class="row">
      </div>
      <div style="color: grey; margin-top: 5px; font-size: 1em">
        <% if(is_dfid_project(project['iati_identifier'])) %>
          <p>Some documents can be excluded due to privacy or security risks. Dates in brackets refer to the date the document was first published.</p>
        <% end %>
      </div>
        <table class="results-list">
            <thead class="visually-hidden">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Doc Type</th>
                    <th scope="col">Categories</th>
                </tr>
            </thead>
            <tbody>
                <% project['document_links'].each do |document| %>
                  <%begin%>
                    <%
                    t_url = document['url']
                    if t_url.include? "http://iati.fcdo."
                      t_url = t_url.sub! 'http:', 'https:'
                    end
                    t_url_txt = document['title']['narrative'][0]['text'].gsub(/\.[^.]*$/, '')
                    t_code = document['title']['narrative'][0]['lang']['code']
                    t_title = document['title']['narrative'][0]['lang']['name']
                    %>
                    <tr class="result-list-row">
                        <th scope="row"><a href="<%= t_url %>"><%= t_url_txt %></a></th>
                        <% if t_code != "en" then%>
                           <td scope="col">
                              <span class="language">
                                <%= t_title %>
                              </span>
                           </td>
                        <% end %>
                        <!-- <td scope="col">
                          <%#= if !document['format'].nil? then iati_mime_type document['format']['code'] else "" end %> 
                        </td> -->
                        <td scope="col">
                          <% document['category'].each do |category| %>
                            <span class="category">
                              <%= category['category']['name']%>
                            </span>
                          <% end %>
                        </td>
                    </tr>
                  <%rescue%>
                    <p>Document link(s) not available. Please let the <a href="mailto:IATI-feedback@fcdo.gov.uk">site admins</a> know of this.</p>
                  <%end%>
                <% end %>
                <!-- This part is to handle documents with application/mail formats -->
                <%# project['local_document_links'].each do |document| %>
               <!-- <tr class="result-list-row">
                        <th scope="row"><a href="<%#= document['url']%>"><%#= document['title']%></a></th>
                        
                        <td scope="col">
                          <%#= iati_mime_type document['format']%>
                        </td>
                        <td scope="col">
                          <%# tempCategories = document['category'].split(",") %>
                          <%# tempDocCategories = JSON.parse(File.read('data/doc_category_list.json')) %>
                          <%#tempCategories.each do |category|%>
                          <%# matchedCategory = tempDocCategories.select{|c| c['code'] == category} %>
                            <span class="category">
                              <%#= matchedCategory[0]["text"]%>
                            </span>
                          <%# end %>
                        </td>
                    </tr> -->
                  <%#end%>
            </tbody>
        </table>
    </div>
</div>

<script src="/javascripts/jquery-3.3.1.js" type="text/javascript"></script>
<script src="/javascripts/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="/javascripts/dataTables.buttons.min.js" type="text/javascript"></script>
<script src="/javascripts/buttons.flash.min.js" type="text/javascript"></script>
<script src="/javascripts/buttons.html5.min.js" type="text/javascript"></script>
<script src="/javascripts/buttons.print.min.js" type="text/javascript"></script>
<link rel="stylesheet" type="text/css" href="/stylesheets/jquery.dataTables.min.css">
<link rel="stylesheet" type="text/css" href="/stylesheets/buttons.dataTables.min.css">
<script type="text/javascript">
  var jq3 = jQuery.noConflict(true);
  jq3(document).ready(function() {
    var tab1 = jq3('#transactionsv3').DataTable({
      "info":false,
      "paging":false,
      "searching":false,
      "order":[1,"asc"]
    });
    var tab2 = jq3('.transactions-tablev2').DataTable({
      retrieve: true,
      "info": false,
      "paging": false,
      "searching": false,
      dom: 'Bfrtip',
      buttons: [
        'csvHtml5'
      ],
      initComplete: function(){
        var $buttons = jq3('.dt-buttons').hide();
        $buttons.parent().parent().children('.downloadInCSV').click(function(){
          $buttons.find('.button-csv').click();
        });
        // jq3('.downloadInCSV').click(function(){
        //   jq3(this).parent().parent().parent().children('.dt-buttons').children('.buttons-csv').click();
        // });
      }
    });
    jq3('.transactions-tablev2').show();
    //Process for generating component details
    var components = [];
    jq3.get('/country-or-region/<%= project["iati_identifier"]%>')
    .done(function(response){
      if(response.projectType == 'country'){
        $('#countryOrRegion').html('<a class="govuk-breadcrumbs__link" href="'+response.output.breadcrumbUrl+'/">'+response.output.breadcrumbUrl+'</a>');
      }
    });
    jq3('#genComList').slideDown('slow');
    jq3.get('/component-list/<%= project["iati_identifier"]%>')
    .done(function(response){
      jq3('#genComList').slideUp('slow');
      jq3('#genComDetails').slideDown('slow');
      components = response.output;
      jq3.each(components, function(i, data){
        jq3.get('/project-details/'.concat(data))
        .done(function(res){
          tab1.row.add([res.output.title,res.output.iati_identifier,res.output.activity_dates.start_date,res.output.activity_dates.end_date]);
          tab1.draw();
          jq3('#genComDetails').html('(Processed: '.concat(i+1,' out of ', components.length, ' components data.)'))
          if(components.length == i+1) {
            jq3('#genComDetails').slideUp('slow');
          }
        })
      });
    });
    jq3('#transactionsv3').show();
    jq3.get('/total-project-budget/<%= project["iati_identifier"]%>')
    .done(function(response){
      $('#totalProjectBudget').html(response.output);
    });
    jq3.get('/project-yearwise-budget/<%= project["iati_identifier"]%>')
    .done(function(response){
      res = response.output;
      jq3.each(res, function(i, data){
        var d = {}
        d['number'] = data['value'];
        d['currency'] = "<%= begin project['default_currency']['code'] rescue 'Â£' end%>";
        jq3.post('/number-to-currency', {
          data: d
        })
        .done(function(res2){
          tab2.row.add([data.fy,res2.output]);
          tab2.draw();
        })
      });
    });

    jq3.get('/get-funding-projects/<%= project["iati_identifier"]%>')
    .done(function(response){
      if(response.output > 0) {
        $('.partner-tab').show();
      }
      else {
        jq3.get('/get-funded-projects/<%= project["iati_identifier"]%>')
        .done(function(res){
          if(res.output > 0) {
            $('.partner-tab').show();
          }
        })
      }
    })
  })
</script>