<%= erb :'partials/_projects-header', :locals => { :project => project, :active => "documents"} %>

<div class="row">
    <div class="twelve columns summary">
      <h2>Documents</h2>
      <div class="row">
      </div>
      <div style="color: grey; margin-top: 5px; font-size: 1em">
        <% if(is_dfid_project(project['iati_identifier'])) %>
          <p>Some documents can be excluded due to privacy or security risks. Dates in brackets refer to the date the document was first published.</p>
        <% end %>
      </div>
        <table class="results-list">
            <thead class="visually-hidden">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Doc Type</th>
                    <th scope="col">Categories</th>
                </tr>
            </thead>
            <tbody>
                <% project['document_links'].each do |document| %>
                  <%begin%>
                    <%
                    t_url = document['url']
                    if t_url.include? "http://iati.fcdo."
                      t_url = t_url.sub! 'http:', 'https:'
                    end
                    t_url_txt = document['title']['narrative'][0]['text'].gsub(/\.[^.]*$/, '')
                    t_code = document['title']['narrative'][0]['lang']['code']
                    t_title = document['title']['narrative'][0]['lang']['name']
                    %>
                    <tr class="result-list-row">
                        <th scope="row"><a href="<%= t_url %>"><%= t_url_txt %></a></th>
                        <% if t_code != "en" then%>
                           <td scope="col">
                              <span class="language">
                                <%= t_title %>
                              </span>
                           </td>
                        <% end %>
                        <!-- <td scope="col">
                          <%#= if !document['format'].nil? then iati_mime_type document['format']['code'] else "" end %> 
                        </td> -->
                        <td scope="col">
                          <% document['category'].each do |category| %>
                            <span class="category">
                              <%= category['category']['name']%>
                            </span>
                          <% end %>
                        </td>
                    </tr>
                  <%rescue%>
                    <p>Document link(s) not available. Please let the <a href="mailto:IATI-feedback@fcdo.gov.uk">site admins</a> know of this.</p>
                  <%end%>
                <% end %>
                <!-- This part is to handle documents with application/mail formats -->
                <%# project['local_document_links'].each do |document| %>
