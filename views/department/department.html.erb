<div class="row" style="margin-top: 20px">
    <div class="twelve columns">
        <h3 class="section-group-title">UK ODA by Government Department in 2017*</h3>
        <table class="transactions-table oda-table" style="width:100%">
          <tbody>
            <thead>
              <th></th>
              <th style="border-left: 1px solid rgb(218, 218, 218)">Â£m</th>
              <th style="border-left: 1px solid rgb(218, 218, 218)">% UK ODA</th>
            </thead>
            <% odas.each do |oda| %>
              <tr>
                <td><%= oda[1][0]["name"] %></td>
                <% if oda[1][0]["value"] >= 0 %>
                  <td style="border-left: 1px solid rgb(218, 218, 218)"><span><%= oda[1][0]["value"].to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse %></span>
                  <!-- <td style="border-left: 1px solid rgb(218, 218, 218)"><%#= ((oda[1][0]["value"].to_f / totalOdaValue.to_f)*100.0).round(1) %>%</td> -->
                  <td style="border-left: 1px solid rgb(218, 218, 218)"><%= oda[1][0]["percentage"] %>%</td>
                <%else%>
                  <td style="border-left: 1px solid rgb(218, 218, 218)">~</td>
                  <td style="border-left: 1px solid rgb(218, 218, 218)">0.0%</td>
                <%end%>
              </tr>
            <% end %>
          </tbody>
        </table>
        <span style="color: silver">Source: <a target="_BLANK" href="http://2017https/www.gov.uk/government/statistics/statistics-on-international-development-2017">Statistics on International Development</a></span>
    </div>
