<div class="row">
    <div class="twelve columns">
        <div class="tab-bar-container">
            <div class="row">

                <div class="projects-nav six columns">
                    <nav>
                        <ul class="tab-bar">
                            <li <%= active=="summary" ? "class='active'" : ""%>><a id='Summary' href="/regions/<%= region[:code] %>">Summary</a></li>
                            <%if project_count!=0 %>
                                <li <%= active=="projects" ? "class='active'" : ""%>><a id='Active-Projects' href="/regions/<%= region[:code] %>/projects">Active Projects (<%=project_count%>)</a></li>
                            <%end%>
                        </ul>
                    </nav>
                </div>  

                 <div class="button-row six columns">
                    <% regionSubscription = false
                    if project_count > 0  && regionSubscription%>
                    <span>
                        <a target="_BLANK" id='Subscribe' href="https://public.govdelivery.com/accounts/UKDFID/subscriber/new?topic_id=UKDFID_<%= format_query_string region['code'] %>" title="Subscribe to receive updates on <%= region['name'] %> by email" class="button inform">&#9993; Subscribe</a>
                    </span>
                    <% end %>
                     <span>
                        <a id='Report-Fraud' href="/fraud?region=<%= format_query_string region[:name] %>" class="button serious" title="Report fraud">Report Fraud</a>
                    </span>
                </div>  

            </div>
        </div>
    </div>
</div>