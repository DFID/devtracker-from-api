<link type="text/css" rel="stylesheet" href="/stylesheets/jquery-ui-1.10.2.custom.min.css" >
<script src="/javascripts/jquery-ui-1.10.2.custom.min.js" type="text/javascript"></script>
<script type="text/javascript" src="/javascripts/formatDate.js"></script>

<div class="govuk-breadcrumbs govuk-breadcrumbs--collapse-on-mobile">
    <ol class="govuk-breadcrumbs__list">
        <li class="govuk-breadcrumbs__list-item"><a class="govuk-breadcrumbs__link" href="/">Home</a></li>
        <%if searchType == 'F'%>
            <li class="govuk-breadcrumbs__list-item" aria-current="page">Search Results</li>
        <%elsif searchType == 'O' %>
            <li class="govuk-breadcrumbs__list-item"><a class="govuk-breadcrumbs__link" href="/department">Aid by Department</a></li>
            <li class="govuk-breadcrumbs__list-item" aria-current="page"><%= ogd_title %></li>
        <%elsif searchType == 'R' %>
            <%if region[:name] == 'All'%>
                <li class="govuk-breadcrumbs__list-item"><a class="govuk-breadcrumbs__link" href="/location/regional">Aid by Location</a></li>
            <%else%>
                <li class="govuk-breadcrumbs__list-item"><a class="govuk-breadcrumbs__link" href="/location/global">Aid by Location</a></li>
            <%end%>
        <%elsif searchType == 'S'%>
            <li class="govuk-breadcrumbs__list-item"><a class="govuk-breadcrumbs__link" href="/sector">Aid by Sector</a></li>
            <li class="govuk-breadcrumbs__list-item"><a class="govuk-breadcrumbs__link" href="/sector/<%=sector_list['sectorHierarchyPath']['highLevelSectorCode']%>/"><%=sector_list['sectorHierarchyPath']['highLevelSectorDescription']%></a></li>
            <%#if !(defined?(sectorData['categoryCode'])).nil? %>
            <%if sectorData['categoryCode'].length > 0 %>
                <li class="govuk-breadcrumbs__list-item"><a class="govuk-breadcrumbs__link" href="/sector/<%=sector_list['sectorHierarchyPath']['highLevelSectorCode']%>/categories/<%=sectorData['categoryCode']%>"><%=sector_list['sectorHierarchyPath']['categoryDescription']%></a></li>
            <%end%>
            <%if !(defined?(sectorData['sectorName'])).nil?%>
                <% if sectorData['sectorName'] != ''%>
                    <li class="govuk-breadcrumbs__list-item" aria-current="page"><%= sectorData['sectorName'] %></li>
                <%end%>
            <%end%>
        <%end%>
